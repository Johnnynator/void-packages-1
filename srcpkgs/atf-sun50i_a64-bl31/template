# Template file for 'atf-sun50i_a64-bl31'
pkgname=atf-sun50i_a64-bl31
version=2.4
revision=1
archs="aarch64*"
wrksrc="trusted-firmware-a-${version}"
hostmakedepends="cross-arm-none-eabi"
short_desc="ARM Trusted Firmware for Allwinner sun50i_a64 boards (ARMv8, bl31 option)"
maintainer="John <me@johnnynator.dev>"
license="BSD-3-Clause"
homepage="https://developer.trustedfirmware.org/dashboard/view/6/"
distfiles="https://git.trustedfirmware.org/TF-A/trusted-firmware-a.git/snapshot/trusted-firmware-a-${version}.tar.gz"
checksum=bf3eb3617a74cddd7fb0e0eacbfe38c3258ee07d4c8ed730deef7a175cc3d55b
nostrip=yes

do_build() {
	unset CFLAGS CXXFLAGS CPPFLAGS LDFLAGS
	if [ "$CROSS_BUILD" ]; then
		export CROSS_COMPILE=${XBPS_CROSS_TRIPLET}-
	fi
	make ${makejobs} PLAT=sun50i_a64 bl31
}

do_install() {
	vinstall build/sun50i_a64/release/bl31/bl31.elf 0755 usr/lib/trusted-firmware-a/sun50i_a64
	vlicense docs/license.rst
}

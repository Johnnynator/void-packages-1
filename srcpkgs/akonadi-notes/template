# Template file for 'akonadi-notes'
pkgname=akonadi-notes
version=19.11.90
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules python qt5-qmake qt5-host-tools
 kcoreaddons"
makedepends="kmime-devel akonadi5-devel"
short_desc="Libraries and daemons to implement notes management in Akonadi"
maintainer="John <johnz@posteo.net>"
license="LGPL-2.1-or-later, GPL-2.0-or-later, BSD-2-Clause"
homepage="https://kontact.kde.org"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/${pkgname}-${version}.tar.xz"
checksum=0bb8c294d4074d5512fe10423f9bcb7bab8a82005fa8ce1236ec64343c237530

post_install() {
	vlicense COPYING.BSD COPYING.BSD
}

akonadi-notes-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
